<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_recyclerview_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_menu_item"
    >

    <ImageView
        android:paddingStart="@dimen/nav_menu_left_padding"
        android:layout_centerVertical="true"
        android:id="@+id/nav_icon"
        android:layout_width="@dimen/nav_menu_icon_height"
        android:layout_height="@dimen/nav_menu_icon_height" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/nav_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nav_icon" />
</RelativeLayout>