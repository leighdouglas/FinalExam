<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_drawer_top_height"
        android:background="@color/nav_top_color">

        <ImageView
            android:id="@+id/nav_imageview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_imageview"
            android:layout_centerInParent="true"
            android:src="@drawable/profile_placeholder" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/nav_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/nav_recyclerview" />

</LinearLayout>
